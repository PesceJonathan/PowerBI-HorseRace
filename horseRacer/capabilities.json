{
    "dataRoles": [
        {
            "displayName": "Axis",
            "name": "axis",
            "kind": "Grouping"
        },
        {
            "displayName": "Legend",
            "name": "legend",
            "kind": "Grouping"
        },
        {
            "displayName": "Images",
            "name": "images",
            "kind": "Measure"
        },
        {
            "displayName": "Values",
            "name": "values",
            "kind": "Measure"
        }
    ],
    "objects": {
        "dataPoint": {
            "displayName": "Data colors",
            "properties": {
                "defaultColor": {
                    "displayName": "Default color",
                    "type": {
                        "fill": {
                            "solid": {
                                "color": true
                            }
                        }
                    }
                },
                "showAllDataPoints": {
                    "displayName": "Show all",
                    "type": {
                        "bool": true
                    }
                },
                "fill": {
                    "displayName": "Fill",
                    "type": {
                        "fill": {
                            "solid": {
                                "color": true
                            }
                        }
                    }
                },
                "fillRule": {
                    "displayName": "Color saturation",
                    "type": {
                        "fill": {}
                    }
                },
                 "fontSize": {
                    "displayName": "Text Size",
                    "type": {
                        "formatting": {
                            "fontSize": true
                        }
                    }
                }
            }
        }
    },
    "dataViewMappings": [
        {
            "categorical": {
                "categories": {
                    "select": [
                        {
                            "bind": {
                                "to": "axis"
                            }
                        }
                    ]
                },
                "values": {
                    "group": {
                        "by": "legend",
                        "select": [
                            {
                                "for": {
                                    "in": "values"
                                }
                            },
                            {
                                "bind": {
                                    "to": "images"
                                }
                            }
                        ]
                    }
                }
            }
        }
    ]
}